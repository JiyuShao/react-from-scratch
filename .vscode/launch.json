  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Demo Localhost",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceRoot}/packages/demo",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///*": "${webRoot}/*", // Example: "webpack:///./app.js" -> "${webRoot}/./app.js",
      }
    }
  ]
}
